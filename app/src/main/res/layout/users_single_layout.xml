<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffffff">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_single_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:src="@mipmap/ic_account_circle_white_48dp" />

    <TextView
        android:id="@+id/user_single_name"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/user_single_image"
        android:padding="2dp"
        android:paddingLeft="3dp"
        android:text="DisplayName"
        android:textColor="#2360ef"
        android:textColorLink="@color/colorAccent"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/user_single_status"
        android:layout_width="270dp"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/user_single_name"
        android:layout_below="@+id/user_single_name"
        android:paddingLeft="5dp"
        android:text="user default status"
        android:textColor="#5d89cb"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/online_Icon"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:layout_above="@+id/user_single_status"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/user_single_seen"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/presence_online" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/user_single_name"
        android:background="#cacbe8"
        android:text="TextView" />

    <TextView
        android:id="@+id/user_single_seen"
        android:layout_width="40dp"
        android:layout_height="28dp"
        android:layout_alignBaseline="@+id/user_single_name"
        android:layout_alignBottom="@+id/user_single_name"
        android:layout_toEndOf="@+id/user_single_name"
        android:textAlignment="center"
        android:visibility="invisible"
        android:textColor="@color/colorPrimary"
        android:text="tex" />

</RelativeLayout>