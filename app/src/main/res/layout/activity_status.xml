<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.firechat.StatusActivity">
    <include layout="@layout/app_bar_layout" android:id="@+id/status_toolbar"/>

    <EditText
        android:id="@+id/Date_text"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:ems="10"
        android:hint="Enter your Status"
        android:inputType="textPersonName"
        android:textColor="#ee00f6"
        android:textColorHint="#86b3e9" />

    <Button
        android:id="@+id/changeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Date_text"
        android:layout_alignRight="@+id/Date_text"
        android:layout_below="@+id/Date_text"
        android:layout_marginTop="34dp"
        android:background="#ff1010"
        android:text="change"
        android:textColor="#ffffff" />


</RelativeLayout>
