<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#545ecc"
    tools:context="com.example.hp.firechat.SettingsActivity">
    <include layout="@layout/app_bar_layout" android:id="@+id/settings_tool_bar"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_single_image"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:src="@mipmap/ic_account_circle_white_48dp" />

    <TextView
        android:id="@+id/settings_name"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@+id/user_single_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:padding="1dp"
        android:text="Display Name"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Settings_status"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/settings_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:text="Hi There I am using FireChat" />

    <Button
        android:id="@+id/settings_imageBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Settings_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="CHANGE IMAGE" />

    <Button
        android:id="@+id/Settings_status_Btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/settings_imageBtn"
        android:layout_alignStart="@+id/settings_imageBtn"
        android:layout_below="@+id/settings_imageBtn"
        android:layout_marginTop="17dp"
        android:background="#ff15c1"
        android:text="CHANGE STATUS"
        android:textColor="#ffffff" />

</RelativeLayout>
